[user]
  name = Nick Silkey
  email = nick.silkey@rackspace.com
#  email = nick@silkey.org

[github]
  user = filler

[apply]
  # Detect whitespace errors when applying a patch
  whitespace = fix

[alias]
  co = checkout
  ci = commit --verbose
  di = diff
  st = status -s
  br = branch
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  type = cat-file -t
  dump = cat-file -p
  tagsha = !sh -c 'git rev-list $0 | head -n 1'

[core]
  # Use custom `.gitignore` and `.gitattributes`
  excludesfile = ~/.gitignore
  attributesfile = ~/.gitattributes
  autocrlf = input
  safecrlf = true

[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = auto

[merge]
  # Include summaries of merged commits in newly created merge commit messages
  log = true

# Use `origin` as the default remote on the `master` branch in all cases
[branch "master"]
  remote = origin
  merge = refs/heads/master

# URL shorthands
[url "git@github.com:"]
  insteadOf = "gh:"
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
  insteadOf = "github:"
[url "git@gist.github.com:"]
  insteadOf = "gst:"
  pushInsteadOf = "gist:"
  pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
  insteadOf = "gist:"
